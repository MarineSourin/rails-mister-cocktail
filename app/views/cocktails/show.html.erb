<% if @cocktail.photo.present? %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @cocktail.photo, height: 300, width: 400, crop: :fill %>');">
      <h1><%= @cocktail.name %></h1>
  </div>
<% else %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://res.cloudinary.com/marinesourin/image/upload/v1550239348/cocktail_by_default.jpg');">
      <h1><%= @cocktail.name %></h1>
  </div>
<% end %>

<div class="container description">
  <h2>Description</h2>
  <p><%= @cocktail.description %></p>
  <p class= "btn btn-show"><%= link_to "Edit description", edit_cocktail_path(@cocktail)  %></p>
</div>

<div class="container ingredient">
  <h2>Ingredients</h2>
  <% @cocktail.doses.each do |dose|%>
    <p>
    <%= dose.ingredient.name %> â€” <%= dose.description %>
      <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fas fa-trash-alt">
        </i>
      <% end %>
    </p>
  <% end %>
  <p class= "btn btn-show"><%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail) %></p>
</div>

<p class= "btn btn-back"><%= link_to "Back to list", cocktails_path %></p>

