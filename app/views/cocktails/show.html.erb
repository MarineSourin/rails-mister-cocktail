<% if @cocktail.photo.present? %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('<%= cl_image_path @cocktail.photo, crop: :fill %>');">
      <h1><%= @cocktail.name %></h1>
      <div class="container information">
        <div class="container description">
          <h2>Description</h2>
          <p><%= @cocktail.description %></p>
          <p class= "btn btn-show"><%= link_to edit_cocktail_path(@cocktail) do  %>
            <i class="fas fa-edit"></i>
          <% end %></p>
        </div>

        <div class="container ingredient">
          <h2>Ingredients</h2>
          <% @cocktail.doses.each do |dose|%>
            <p>
            <%= dose.ingredient.name %> — <%= dose.description %>
              <%= link_to dose_path(dose), class: "btn btn-show", method: :delete, data: { confirm: "Are you sure?" } do %>
                <i class="fas fa-trash-alt"></i>
            <% end %></p>
          <% end %>
          <p class= "btn btn-show"><%= link_to new_cocktail_dose_path(@cocktail) do %>
            <i class="fas fa-plus-square"></i>
          <% end %></p>
        </div>
      </div>

      <p class= "btn btn-back"><%= link_to cocktails_path do %>
        <i class='fas fa-arrow-circle-left'></i>
      <% end %></p>
  </div>
<% else %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('https://res.cloudinary.com/marinesourin/image/upload/v1550239348/cocktail_by_default.jpg');">
      <h1><%= @cocktail.name %></h1>
      <div class="container information">
        <div class="container description">
          <h2>Description</h2>
          <p><%= @cocktail.description %></p>
          <p class= "btn btn-show"><%= link_to edit_cocktail_path(@cocktail) do  %>
            <i class="fas fa-edit"></i>
          <% end %></p>
        </div>

        <div class="container ingredient">
          <h2>Ingredients</h2>
          <% @cocktail.doses.each do |dose|%>
            <p>
            <%= dose.ingredient.name %> — <%= dose.description %>
              <p class= "btn btn-show"><%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                <i class="fas fa-trash-alt"></i>
            <% end %></p>
            </p>
          <% end %>
          <p class= "btn btn-show"><%= link_to new_cocktail_dose_path(@cocktail) do %>
            <i class="fas fa-plus-square"></i>
          <% end %></p>
        </div>
      </div>

      <p class= "btn btn-back"><%= link_to cocktails_path do %>
        <i class='fas fa-arrow-circle-left'></i>
      <% end %></p>
  </div>
<% end %>


