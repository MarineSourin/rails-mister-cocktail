<div class="banner">
  <div class="container">
    <h1>Cocktail's library</h1>
    <p>Store and create your own cocktails</p>
    <p class="btn"><%= link_to 'Add a new cocktail', new_cocktail_path %></p>
  </div>
</div>

<div class="container container-card">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <% if cocktail.photo.present? %>
        <div class="col-xs-12 col-sm-4">
          <%= link_to cocktail_path(cocktail) do %>
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>');">
              <div class="card-description" >
                <h2><%= cocktail.name %> </h2>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="col-xs-12 col-sm-4">
          <%= link_to cocktail_path(cocktail) do %>
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://res.cloudinary.com/marinesourin/image/upload/v1550239348/cocktail_by_default.jpg');">
              <div class="card-description" >
                <h2><%= cocktail.name %> </h2>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
